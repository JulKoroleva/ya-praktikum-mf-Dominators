{
  "name": "client-server-template-with-vite",
  "private": true,
  "scripts": {
    "bootstrap": "yarn && node init.js && lerna clean && yarn && lerna bootstrap",
    "build": "lerna run build",
    "dev:client": "lerna run dev  --scope=client",
    "dev:server": "lerna run dev --scope=server",
    "dev": "cd nginx && cmd /c start /B nginx -c conf/nginx-yp.conf && cd .. && lerna run dev",
    "nginx:start": "cd nginx && nginx -c conf/nginx-yp.conf",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "lint:styles": "stylelint \"packages/client/**/*.scss\" --cache",
    "fix:styles": "stylelint \"packages/client/**/*.scss\" --fix",
    "format": "lerna run format",
    "preview": "lerna run preview",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts?(x)": [
      "eslint --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.3.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^5.4.3",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@loadable/component": "^5.16.4",
    "@loadable/server": "^5.16.5",
    "eslint-plugin-react": "^7.37.2"
  }
}
